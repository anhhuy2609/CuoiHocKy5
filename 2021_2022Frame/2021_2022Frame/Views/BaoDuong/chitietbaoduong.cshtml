@{
    var sum = 0;
    foreach (var item in ViewBag.listCV){
        sum += item.Dongia;
    }
}
Ngày nhận xe <input type="date" value="@ViewBag.CTBD.Ngaygionhan" />
Ngày trả xe <input type="date" value="@ViewBag.CTBD.Ngaygiotra" /> 
Thành tiền <input type="text" name="thanhtien" id="thanhtien" value="@sum"/>

<table border="1">
    <tr>
        <th>Tên công việc</th>
        <th>Đơn giá</th>
        <th>Chức năng</th>
    </tr>
    @foreach(var item in ViewBag.listCV) {
        <tr>
            <td>@item.Tencv</td>
            <td class = "dongia">@item.Dongia</td>
            <td><a href="/CongViec/xoacv?Mabd=@ViewBag.CTBD.Mabd&Macv=@item.Macv" class="btn-delete">Xóa</a></td>
        </tr>
    }
</table>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        $(".btn-delete").click(function(){
            var row = $(this).parents("tr");
            row.remove();
        });
    });
</script>
